{
  "compilerOptions": {
    "strict": true,
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
  },
  "exclude": [
    "node_modules",
    "dist",
    "webpack.config.js",
    "jest.config.js"
  ]
}
